  <div class="box menuBox">
    <div class="card">


{{!-- edu --}}
  <div class="box edu">
    <a class="gridText" href="/eduRes">EDUCATIVE RESOURCES</a>  
  </div>

{{!-- agora --}}
  <div class="box agora">
   <a class="gridText" href="/agora">AGORA</a>
  </div>

{{!-- Ironhackers --}}
  <div class="box ironhackers">
    <a class="gridText" href="/ih/profiles">IRONHACKERS</a>
  </div>

    </div>
</aside>
</section>
{{!-- final --}}
</section>