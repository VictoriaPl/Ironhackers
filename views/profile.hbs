<header>
  <nav>
    <ul>
      <li class="menu" style="font-size: 1.6rem;">{{user.name}}</li>
      <li class="menu"><img src="https://dl.dropboxusercontent.com/s/7hy1qof7mdsgt6y/logoProfiles.png?dl=0" alt="Ironhack" style="height: 3vh;"></li>
      <li class="menu"><a href="/auth/logout" class="navButtons" style="font-size: 1.6rem;">LOGOUT</a></li>
    </ul>
  </nav>
  <div class="navColorDiv"></div>
</header>


<section class="p-gridContainer">
{{!-- Profile data container --}}
<aside class="profileContainer">

{{!-- hex --}}
  <div class="box">
    <div class="d-flex justify-content-center" style="width: 19.5rem;">
    <div class="hex" style="background-image: url({{user.profileImg}});">		
		  <div class="corner-1"></div>
	    <div class="corner-2"></div>
    </div>

    </div>
    <br>
<hr>
  </div>
  
{{!-- data user --}}
  <div class="box">
    <h1 id="profileUsername">Welcome, {{user.username}}</h1>
    <br>
    <p><strong>Complete name: </strong>{{user.name}}</p>
    <p><strong>e-mail: </strong>{{user.email}}</p>
    <p><strong>Age: </strong>{{user.age}}</p>
    <p><strong>Current Job: </strong>{{user.currentJob}}</p>
    <p><strong>Ironhacker: </strong>{{user.role}}</p>
  </div>

{{!-- buttons edit and delete --}}
  <div class="box row">
    {{#if user.editPermision}}
    <div class="col-sm-7">
    <a href="/editProfile/{{user._id}}" class="profileButton btn btn-outline-dark btn-sm">Edit profile</a>
    </div>
    <div class="col-sm-2">
    <a href="/{{user.id}}/delete" class="profileButton btn btn-outline-dark btn-sm">Delete profile</a>
    </div>
    {{/if}}
    {{#if user.admin}}
    <div class="col-sm-7">
    <a href="/editProfile/{{user._id}}" class="btn btn-outline-dark btn-sm">Edit profile</a>
    </div>
    <div class="col-sm-2">
    <a href="/{{user.id}}/delete" class="btn btn-outline-dark btn-sm">Delete profile</a>
    </div>
    {{/if}}
  </div>

</aside>

{{!-- social media buttons --}}
<aside class="socialMedia">
  <div class="smButtons">
    
    <div class="circleButton">
      <a href="{{user.github}}"><img class="smLogos" src="https://dl.dropboxusercontent.com/s/x1i5ovofrkio6eb/githubLogo.png?dl=0" alt=""></a>
    </div>
    <div class="circleButton">
      <a href="{{user.codewars}}"><img class="smLogos" src="https://dl.dropboxusercontent.com/s/eb8b8fjtsd2qun8/codewarsLogo.png?dl=0" alt=""></a>
    </div>
    <div class="circleButton">
      <a href="{{user.linkedin}}"><img class="smLogos" src="https://dl.dropboxusercontent.com/s/y7vi2s85k0ur1rk/linkedinLogo.png?dl=0" alt=""></a>
    </div>
    <div class="circleButton">
      <a href="{{user.facebook}}"><img class="smLogos" src="https://dl.dropboxusercontent.com/s/9o0l2ujwhskvycs/facebookLogo.png?dl=0" alt=""></a>
    </div>
    <div class="circleButton">
      <a href="{{user.instagram}}"><img class="smLogos" src="https://dl.dropboxusercontent.com/s/de3wvulto0tdffz/instagramLogo.png?dl=0" alt=""></a>
    </div>
    <div class="circleButton">
      <a href="{{user.twitter}}"><img class="smLogos" src="https://dl.dropboxusercontent.com/s/i63povadpvrjnco/twitterLogo.png?dl=0" alt=""></a>
    </div>
      
    </div>
</aside>

{{!-- menu section --}}
